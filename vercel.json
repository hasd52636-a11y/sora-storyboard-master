{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "dist",
        "installCommand": "npm install"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/deepseek/(.*)",
      "destination": "https://api.deepseek.com/$1"
    },
    {
      "source": "/api/openai/(.*)",
      "destination": "https://api.openai.com/$1"
    },
    {
      "source": "/api/zhipu/(.*)",
      "destination": "https://open.bigmodel.cn/$1"
    },
    {
      "source": "/api/qwen/(.*)",
      "destination": "https://dashscope.aliyuncs.com/$1"
    },
    {
      "source": "/api/moonshot/(.*)",
      "destination": "https://api.moonshot.cn/$1"
    },
    {
      "source": "/api/doubao/(.*)",
      "destination": "https://ark.cn-beijing.volces.com/$1"
    },
    {
      "source": "/api/hunyuan/(.*)",
      "destination": "https://api.hunyuan.cloud.tencent.com/$1"
    },
    {
      "source": "/api/siliconflow/(.*)",
      "destination": "https://api.siliconflow.cn/$1"
    },
    {
      "source": "/api/proxy-image",
      "destination": "/api/proxy-image.ts"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "public": true
}